<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendancemanager">
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.attendancemanager.HomeScreenActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.AddAttendanceActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.ViewStudentActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.AddStudentActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.RemoveStudentActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.AddAttendanceSessionActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.ViewAttendanceByFacultyActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.AttendancePerStu"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.AddFaculty"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.RemoveFacultyActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.ViewFacultyActivity"
            android:label="AndroidAttendanceManager">
        </activity>
        <activity
            android:name="com.example.attendancemanager.ViewStudentListActivity"
            android:label="AndroidAttendanceManager">
        </activity>

        <activity android:name=".DialogueActivity"></activity>

    </application>

</manifest>