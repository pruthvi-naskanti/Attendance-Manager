<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18a34b"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/buttonViewstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/roundedbutton"
        android:text="View student"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonaddstudent" />

    <Button
        android:id="@+id/buttonlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/buttonviewfaculty" />

    <Button
        android:id="@+id/buttonviewfaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/roundedbutton"
        android:text="View faculty"
        app:layout_constraintBottom_toTopOf="@+id/buttonlogout"
        app:layout_constraintLeft_toLeftOf="@+id/buttonaddfaculty" />

    <Button
        android:id="@+id/buttonaddfaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundedbutton"
        android:text="Add faculty"
        app:layout_constraintBottom_toTopOf="@+id/buttonviewfaculty"
        app:layout_constraintLeft_toLeftOf="@+id/buttonViewstudent" />

    <Button
        android:id="@+id/buttonaddstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/roundedbutton"
        android:text="Add student"
        app:layout_constraintLeft_toLeftOf="@+id/buttonViewstudent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attendancePerStudentButton"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="241dp"
        android:layout_marginBottom="414dp"
        android:background="@drawable/roundedbutton"
        android:text="Attendance Per Student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rmstubtn"
        android:layout_width="391dp"
        android:layout_height="53dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="502dp"
        android:background="@drawable/roundedbutton"
        android:text="Remove Student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rmfacultybtn"
        android:layout_width="375dp"
        android:layout_height="53dp"
        android:background="@drawable/roundedbutton"
        android:text="Remove Faculty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

</androidx.constraintlayout.widget.ConstraintLayout>
